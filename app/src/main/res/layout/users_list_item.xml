<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/client_serviceRequired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="services required"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />




            </LinearLayout>


            <TextView
                android:id="@+id/client_appointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="appointment"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/profile_displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="full name"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/client_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone number"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <Button
                    android:id="@+id/btnStylist_confirm_client"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="confirm"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/styled_accept_btn"/>

                <Button
                    android:id="@+id/btnStylist_cancel_client"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="cancel"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/styled_decline_btn"/>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


    <View
        android:id="@+id/recycler_view_line"
        android:layout_width="300dp"
        android:layout_height="1pt"
        android:background="@color/colorPrimary"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>