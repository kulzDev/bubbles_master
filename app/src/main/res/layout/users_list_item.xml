<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/stylist_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/a">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appointment_user_profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client_serviceRequired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="services required"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client_appointmentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appointments"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginRight="18dp"
                    />

                <TextView
                    android:id="@+id/client_appointmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appointments"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />



            </LinearLayout>





            <TextView
                android:id="@+id/booking_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="full name"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/booking_client_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone numbers"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">
                <Button
                    android:id="@+id/btnStylist_confirm_client"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="pending"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/styled_accept_btn"/>

                <Button
                    android:id="@+id/btnStylist_cancel_client"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="decline"
                    android:textAllCaps="false"
                    android:textColor="#F44336"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/styled_decline_btn"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/recycler_view_line"
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>